<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paperLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/artiklNaziv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Naziv" />

        <TextView
            android:id="@+id/artiklOpis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Opis" />

        <TextView
            android:id="@+id/artiklVrsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Vrsta" />

        <TextView
            android:id="@+id/artiklCijena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cijena" />

        <TextView
            android:id="@+id/artiklIznajmljen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iznajmljeno: "
            android:textColor="@color/colorPrimary" />


    </LinearLayout>


    <Button
        android:id="@+id/addToCartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/button_round_light"
        android:padding="12dp"
        android:text="Dodaj u košaricu"
        android:visibility="gone"></Button>


    <TextView
        android:id="@+id/quantityCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_weight=".5"
        android:ems="2"
        android:text="Kol:0"
        android:textAlignment="textEnd"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/paperServiceLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <Button
            android:id="@+id/addDimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:text="Unesi nove\ndimenzije"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/deleteItemBtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorRed"
        android:text="Briši"
        android:textColor="#FFFFFF"
        android:visibility="visible" />

</LinearLayout>
